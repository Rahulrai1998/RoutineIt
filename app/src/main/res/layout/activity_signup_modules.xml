<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupModules"
    android:background="#ffffff">

    <TextView
        android:id="@+id/txtSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up as"
        android:textColor="@color/favColor"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <!-- <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/txtSignup"
         android:layout_toRightOf="@id/txtLogin"
         android:text="Sign up"
         android:textSize="30sp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:textColor="#800000"
         /> -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSignup"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTeacherSnp"
            android:layout_width="320dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="60dp"
            app:cardBackgroundColor="@color/favColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardParentSnp"
            android:layout_marginTop="15dp"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/favColor"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Parent"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStudentSnp"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/favColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>